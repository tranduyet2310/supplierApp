<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.51" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <TextView
            android:id="@+id/titleShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/fullName_v2"
            android:textColor="@color/blackAgri"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_semibold"
            tools:text="@string/supplier_v2"
            android:textColor="@color/grayAgri"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/guideline1"
            app:layout_constraintStart_toEndOf="@id/titleShopName"
            app:layout_constraintTop_toTopOf="@id/titleShopName"
            app:layout_constraintBottom_toBottomOf="@id/titleShopName"/>

        <TextView
            android:id="@+id/titleCropsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/gardenName"
            android:textColor="@color/blackAgri"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleShopName" />

        <TextView
            android:id="@+id/tvCropsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_semibold"
            tools:text="@string/supplier_v2"
            android:textColor="@color/grayAgri"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/guideline1"
            app:layout_constraintStart_toEndOf="@id/titleCropsName"
            app:layout_constraintTop_toTopOf="@id/titleCropsName"
            app:layout_constraintBottom_toBottomOf="@id/titleCropsName"/>

        <TextView
            android:id="@+id/titleRequiredYield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/required_quantity"
            android:textColor="@color/blackAgri"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleCropsName" />

        <TextView
            android:id="@+id/tvRequiredYield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_semibold"
            tools:text="@string/supplier_v2"
            android:textColor="@color/grayAgri"
            android:textSize="13sp"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/titleRequiredYield"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/titleRequiredYield"
            app:layout_constraintBottom_toBottomOf="@id/titleRequiredYield"/>

        <TextView
            android:id="@+id/tvDateCreated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_semibold"
            tools:text="@string/supplier_v2"
            android:textColor="@color/grayAgri"
            android:textSize="13sp"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleRequiredYield"
            app:layout_constraintBottom_toBottomOf="@id/titleRequiredYield"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:backgroundTint="#97AABD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>